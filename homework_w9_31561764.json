{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "projection": {
        "type": "mercator"
    },
    "params": [
        {
            "name": "year_selection",
            "bind": {
                "input": "select",
                "options": [
                    "2017",
                    "2018",
                    "2019",
                    "2020",
                    "2021"
                ],
                "name": "Select Year: "
            },
            "value": "2017"
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/katherinehawkins/FIT3179/refs/heads/main/council_data.csv"
            },
            "transform": [
                {
                    "lookup": "area",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/katherinehawkins/FIT3179/main/final.topojson",
                            "format": {
                                "type": "topojson",
                                "feature": "LGA_2024_AUST_GDA2020"
                            }
                        },
                        "key": "properties.LGA_NAME24"
                    },
                    "as": "geo"
                },
                {
                    "filter": "datum.year == year_selection"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#757575"
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "fertility",
                    "type": "quantitative",
                    "title": "Birth Rate",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            0.8,
                            1.3,
                            1.8
                        ],
                        "range": [
                            "#FFF0F5",
                            "#FFC0CB",
                            "#F08080",
                            "#DC143C"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "area",
                        "type": "nominal",
                        "title": "Council Area"
                    },
                    {
                        "field": "region",
                        "type": "nominal",
                        "title": "Region"
                    },
                    {
                        "field": "fertility",
                        "type": "quantitative",
                        "title": "Birth Rate"
                    },
                    {
                        "field": "rent",
                        "type": "quantitative",
                        "format": "$",
                        "title": "Average Household Rent"
                    },
                    {
                        "field": "year",
                        "type": "quantitative",
                        "title": "Year"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/katherinehawkins/FIT3179/refs/heads/main/final3.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_graticules_1"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "gray"
            }
        }
    ]
}